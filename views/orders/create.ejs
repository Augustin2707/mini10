<%- include('../partials/header', { title: 'Nouvelle Commande - Mini10' }) %>

<div class="container mx-auto px-4 py-6 max-w-2xl">
    <!-- En-t√™te -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="mr-3">üõí</i>Nouvelle Commande
            </h1>
            <a href="/orders" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                <i class="mr-2">‚Üê</i>Retour
            </a>
        </div>
        <p class="text-gray-600 mt-2">S√©lectionnez un compte, puis le produit</p>
    </div>

    <!-- Formulaire -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="rounded-md bg-red-50 p-4 mb-6 flash-message">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="text-red-400">‚ö†Ô∏è</i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Erreur</h3>
                        <div class="mt-2 text-sm text-red-700">
                            <p><%= error %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <form action="/orders/create" method="POST" class="space-y-6" id="orderForm">
            <!-- Compte -->
            <div>
                <label for="account_code" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="mr-2">üè¢</i>Compte
                </label>
                <select name="account_code" id="account_code" required
                        class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        onchange="loadProducts()">
                    <option value="">Choisir un compte...</option>
                    <% accounts.forEach(account => { %>
                        <option value="<%= account.code %>"><%= account.code %> - <%= account.name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Produit (dynamique) -->
            <div>
                <label for="product_id" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="mr-2">üì¶</i>Produit
                </label>
                <select name="product_id" id="product_id" required disabled
                        class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    <option value="">S√©lectionnez un compte d'abord</option>
                </select>
            </div>

            <!-- Quantit√©, Motif, Commentaire -->
            <div>
                <label for="quantity" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="mr-2">üî¢</i>Quantit√©
                </label>
                <input type="number" name="quantity" id="quantity" required min="1"
                       class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                       placeholder="Quantit√© souhait√©e">
            </div>

            <div>
                <label for="motif" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="mr-2">üìù</i>Motif de la commande
                </label>
                <textarea name="motif" id="motif" required rows="3"
                          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                          placeholder="Expliquez la raison de cette commande..."></textarea>
            </div>

            <div>
                <label for="delivery_comment" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="mr-2">üí¨</i>Commentaire de livraison (optionnel)
                </label>
                <textarea name="delivery_comment" id="delivery_comment" rows="2"
                          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                          placeholder="Instructions sp√©ciales pour la livraison..."></textarea>
            </div>

            <!-- Boutons -->
            <div class="flex justify-end space-x-3 pt-4">
                <a href="/orders" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                    Annuler
                </a>
                <button type="submit" 
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    <i class="mr-2">üöÄ</i>Envoyer la Commande
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Script JS pour AJAX -->
<script>
function loadProducts() {
    const accountCode = document.getElementById('account_code').value;
    const productSelect = document.getElementById('product_id');
    
    if (!accountCode) {
        productSelect.innerHTML = '<option value="">S√©lectionnez un compte d\'abord</option>';
        productSelect.disabled = true;
        return;
    }
    
    // CORRECTION : Utiliser la bonne route
    fetch(`/orders/products-by-account/${accountCode}`)
        .then(response => {
            if (!response.ok) {
                throw new Error('Erreur r√©seau');
            }
            return response.json();
        })
        .then(products => {
            productSelect.innerHTML = '<option value="">Choisir un produit...</option>';
            products.forEach(product => {
                const option = document.createElement('option');
                option.value = product.product_id;
                option.textContent = `${product.name} (Stock: ${product.quantity || 0})`;
                productSelect.appendChild(option);
            });
            productSelect.disabled = false;
        })
        .catch(error => {
            console.error('Erreur chargement produits:', error);
            productSelect.innerHTML = '<option value="">Erreur de chargement</option>';
            productSelect.disabled = false;
        });
}
</script>

<%- include('../partials/footer') %>