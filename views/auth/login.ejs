<%- include('../partials/header', { title: 'Connexion - StockFlow' }) %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="mx-auto h-12 w-12 bg-blue-500 rounded-full flex items-center justify-center">
                <i class="text-white text-xl">üîê</i>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Connexion
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Acc√©dez √† votre espace de gestion
            </p>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="rounded-md bg-red-50 p-4 flash-message">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="text-red-400">‚ö†Ô∏è</i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Erreur</h3>
                        <div class="mt-2 text-sm text-red-700">
                            <p><%= error %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <form class="mt-8 space-y-6" action="/auth/login" method="POST">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="login" class="sr-only">Login</label>
                    <input id="login" name="login" type="text" required 
                           class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                           placeholder="Nom d'utilisateur">
                </div>
                <div>
                    <label for="password" class="sr-only">Mot de passe</label>
                    <input id="password" name="password" type="password" required 
                           class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                           placeholder="Mot de passe">
                </div>
            </div>

            <div>
                <button type="submit" 
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="text-blue-300 group-hover:text-blue-400">‚Üí</i>
                    </span>
                    Se connecter
                </button>
            </div>
            
            <div class="text-center">
                <a href="/auth/register" class="font-medium text-blue-600 hover:text-blue-500 text-sm">
                    Cr√©er un compte
                </a>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>