<%- include('partials/header') %>
<h1>Profil - <%= user.login %> (<%= user.role %>)
  <a href="/orders">Retour</a>
</h1>
<h2>Mes Actions Récentes</h2>
<table border="1">
  <tr><th>Date</th><th>Action</th><th>Produit</th><th>Quantité</th><th>Statut</th></tr>
  <% actions.forEach(action => { %>
    <tr>
      <td><%= action.action_date %></td>
      <td><%= action.action_type %></td>
      <td><%= action.name %></td>
      <td><%= action.quantity %></td>
      <td><%= action.status %></td>
    </tr>
  <% }) %>
</table>
<%- include('partials/footer') %>