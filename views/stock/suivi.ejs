<%- include('../partials/header', { title: 'Suivi - StockFlow' }) %>

<div class="container mx-auto px-4 py-6">
    <!-- En-t√™te -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <i class="mr-3">üìà</i>Suivi des Activit√©s
        </h1>
        <p class="text-gray-600">
            Historique pour <span class="font-semibold text-blue-600"><%= user.login %></span> 
            (<span class="capitalize"><%= user.role %></span>)
        </p>
    </div>

    <!-- Tableau de suivi -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-900">
                <i class="mr-2">üïí</i>Historique des Actions
            </h2>
            <a href="/stock" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                <i class="mr-2">‚Üê</i>Retour Stock
            </a>
        </div>
        <div class="overflow-x-auto">
            <% if (actions.length > 0) { %>
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date et Heure</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantit√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Auteur</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% actions.forEach(action => { %>
                    <tr class="hover:bg-gray-50 transition-colors duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= action.date_heure %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <%= action.action_display %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <%= action.produit %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                <%= action.statut === 'entr√©e' ? 'bg-green-100 text-green-800' :
                                   action.statut === 'sortie' ? 'bg-red-100 text-red-800' :
                                   'bg-yellow-100 text-yellow-800' %>">
                                <%= action.quantite %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="status-badge 
                                <%= action.statut === 'entr√©e' ? 'status-validated' :
                                   action.statut === 'sortie' ? 'status-rejected' :
                                   'status-pending' %>">
                                <%= action.statut %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= action.auteur %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <div class="px-6 py-12 text-center">
                <i class="text-4xl text-gray-400 mb-4">üìä</i>
                <p class="text-gray-500 text-lg">Aucune activit√© r√©cente trouv√©e.</p>
                <p class="text-gray-400 text-sm mt-2">Les actions appara√Ætront ici au fur et √† mesure.</p>
            </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>