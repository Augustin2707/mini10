<%- include('../partials/header', { title: 'Gestion des Stocks - StockFlow' }) %>

<div class="container mx-auto px-4 py-6">
    <!-- En-t√™te -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <i class="mr-3">üìä</i>Gestion des Stocks
        </h1>
        <p class="text-gray-600">Bonjour <span class="font-semibold text-blue-600"><%= user.login %></span></p>
    </div>

    <!-- Cartes de statistiques -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="stock-card">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-blue-100 p-3 rounded-lg">
                    <i class="text-blue-600 text-xl">üì¶</i>
                </div>
                <div class="ml-4">
                    <h3 class="text-sm font-medium text-gray-500">Produits en stock</h3>
                    <p class="text-2xl font-bold text-gray-900"><%= stocks.length %></p>
                </div>
            </div>
        </div>
        
        <div class="stock-card border-l-green-500">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-green-100 p-3 rounded-lg">
                    <i class="text-green-600 text-xl">üöö</i>
                </div>
                <div class="ml-4">
                    <h3 class="text-sm font-medium text-gray-500">Commandes √† livrer</h3>
                    <p class="text-2xl font-bold text-gray-900"><%= (orders || []).length %></p>
                </div>
            </div>
        </div>
        
        <div class="stock-card border-l-yellow-500">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-yellow-100 p-3 rounded-lg">
                    <i class="text-yellow-600 text-xl">‚è≥</i>
                </div>
                <div class="ml-4">
                    <h3 class="text-sm font-medium text-gray-500">Propositions en attente</h3>
                    <p class="text-2xl font-bold text-gray-900"><%= (propositions || []).length %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire d'ajout de stock -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
            <i class="mr-2">‚ûï</i>Proposer un Ajout au Stock
        </h2>
        <form id="addStockForm" action="/stock/propose-add" method="POST" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label for="product_id" class="block text-sm font-medium text-gray-700 mb-1">Produit</label>
                <select name="product_id" id="product_id" required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <% products.forEach(product => { %>
                        <option value="<%= product.product_id %>"><%= product.name %></option>
                    <% }) %>
                </select>
            </div>
            <div>
                <label for="quantity_added" class="block text-sm font-medium text-gray-700 mb-1">Quantit√©</label>
                <input type="number" name="quantity_added" id="quantity_added" required min="1"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Quantit√©">
            </div>
            <div class="flex items-end">
                <button type="button" onclick="confirmAdd()" 
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200">
                    <i class="mr-2">‚úÖ</i>Proposer l'ajout
                </button>
            </div>
        </form>
    </div>

    <!-- Tableaux -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Stocks actuels -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">
                    <i class="mr-2">üìã</i>Stocks Actuels
                </h3>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantit√©</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (stocks && stocks.length > 0) { %>
                            <% stocks.forEach(stock => { %>
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    <%= stock.name %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        <%= stock.quantity %> unit√©s
                                    </span>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="2" class="px-6 py-4 text-center text-sm text-gray-500">Aucun stock disponible</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Commandes √† livrer -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">
                    <i class="mr-2">üöö</i>Commandes √† Livrer
                </h3>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Commande</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantit√©</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    #<%= order.order_id %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    <%= order.product_name %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <%= order.quantity %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <form action="/stock/deliver" method="POST" class="inline">
                                        <input type="hidden" name="order_id" value="<%= order.order_id %>">
                                        <button type="submit" 
                                                class="text-green-600 hover:text-green-900 bg-green-50 hover:bg-green-100 px-3 py-1 rounded-md text-xs font-medium transition-colors duration-200">
                                            <i class="mr-1">üì¶</i>Livrer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">Aucune commande √† livrer</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- NOUVELLE SECTION : Commandes en Livraison -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden mt-8">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">
                <i class="mr-2">üöõ</i>Commandes en Livraison (En Traitement)
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Commande</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantit√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Livraison</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (ordersInDelivery && ordersInDelivery.length > 0) { %>
                        <% ordersInDelivery.forEach(order => { %>
                        <tr class="hover:bg-gray-50 transition-colors duration-150">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                #<%= order.order_id %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <%= order.product_name %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= order.quantity %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= order.date_heure_commande %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    En traitement
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Aucune commande en livraison</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Propositions en attente -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden mt-8">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">
                <i class="mr-2">‚è≥</i>Propositions d'Ajout en Attente
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantit√©</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (propositions && propositions.length > 0) { %>
                        <% propositions.forEach(prop => { %>
                        <tr class="hover:bg-gray-50 transition-colors duration-150">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                <%= prop.name %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= prop.quantity_added %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= prop.proposed_date %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="status-badge status-pending">
                                    <%= prop.status %>
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">
                                Aucune proposition en attente
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Lien de suivi -->
    <div class="mt-8 text-center">
        <a href="/stock/suivi" 
           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 transition-colors duration-200">
            <i class="mr-2">üìà</i>Voir le Suivi Comptable
        </a>
    </div>
</div>

<script>
function confirmAdd() {
    const productId = document.getElementById('product_id').value;
    const quantity = document.getElementById('quantity_added').value;
    const productName = document.querySelector(`#product_id option[value="${productId}"]`).text;
    
    if (confirm(`Voulez-vous proposer l'ajout de ${quantity} unit√©s pour le produit "${productName}" ?`)) {
        document.getElementById('addStockForm').submit();
    }
}
</script>

<%- include('../partials/footer') %>