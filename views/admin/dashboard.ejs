<%- include('../partials/header', { title: 'Tableau de Bord Admin - StockFlow' }) %>

<div class="container mx-auto px-4 py-6">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <i class="mr-3">üëë</i>Tableau de Bord Administrateur
        </h1>
        <p class="text-gray-600">Bienvenue, <%= user.login %>. G√©rez les comptes ici.</p>
        <% if (typeof error !== 'undefined') { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mt-4"><%= error %></div>
        <% } %>
    </div>

    <!-- Liens d'acc√®s rapide aux sections (impersonation simple : liens directs) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <a href="/stock" class="bg-blue-50 border-l-4 border-blue-500 p-6 rounded-lg hover:bg-blue-100 transition">
            <h3 class="text-lg font-semibold text-blue-900">Gestion Stock (Comptable)</h3>
            <p class="text-blue-600">Acc√®s aux stocks et livraisons</p>
        </a>
        <a href="/orders" class="bg-green-50 border-l-4 border-green-500 p-6 rounded-lg hover:bg-green-100 transition">
            <h3 class="text-lg font-semibold text-green-900">Commandes (Chefs)</h3>
            <p class="text-green-600">Acc√®s aux commandes et suivi</p>
        </a>
        <a href="/admin/users" class="bg-purple-50 border-l-4 border-purple-500 p-6 rounded-lg hover:bg-purple-100 transition">
            <h3 class="text-lg font-semibold text-purple-900">Tous les Comptes</h3>
            <p class="text-purple-600">Lister et g√©rer les utilisateurs</p>
        </a>
    </div>

    <!-- Formulaire cr√©ation de compte -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
            <i class="mr-2">‚ûï</i>Cr√©er un Nouveau Compte
        </h2>
        <form action="/admin/create-user" method="POST" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label for="login" class="block text-sm font-medium text-gray-700 mb-1">Login</label>
                <input type="text" name="login" id="login" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
                <input type="password" name="password" id="password" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            <div>
                <label for="role" class="block text-sm font-medium text-gray-700 mb-1">R√¥le</label>
                <select name="role" id="role" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
                    <option value="">Choisir...</option>
                    <option value="comptable">Comptable</option>
                    <option value="chef_principal">Chef Principal</option>
                    <option value="chef_service">Chef de Service</option>
                </select>
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md">
                    <i class="mr-2">‚úÖ</i>Cr√©er
                </button>
            </div>
        </form>
    </div>

    <!-- Liste des comptes existants -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Comptes Existants (<%= users.length %>)</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Login</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">R√¥le</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cr√©√© le</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% users.forEach(u => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= u.login %></td>
                        <td class="px-6 py-4 text-sm text-gray-500 capitalize"><%= u.role %></td>
                        <td class="px-6 py-4 text-sm text-gray-500"><%= u.created_at ? new Date(u.created_at).toLocaleDateString() : 'N/A' %></td>
                        <td class="px-6 py-4 text-sm font-medium">
                            <a href="/profile?user_id=<%= u.user_id %>" class="text-blue-600 hover:text-blue-900">Voir Profil</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>